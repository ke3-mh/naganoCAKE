<% if resource.errors.any? %>
  <div id="error_explanation" class="mx-auto alert alert-danger" role="alert">
    <h4>
      <%= resource.errors.count %>件のエラーが発生しました
    </h4>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
