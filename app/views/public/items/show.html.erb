<!--商詳細画面(public)-->
<div class="container">

  <div class="row mt-5">

    <div class="col-md-3 mx-auto">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x200" %>
      <% end %>
    </div>

    <div class="col-md-7 mx-auto">
      <div><h2 class="font-weight-bold"><%= @item.name %></h2></div>
      <div class="mt-3"><h3><%= @item.introduction %></h3></div>
      <div class="mt-5">
        <h2 class="d-inline">¥<%= @item.hoge(@item.price) %></h2> <p class="d-inline">(税込)</p>
      </div>

      <div class="mt-5">
        <%= form_with model:@cart_item, local:true do |f| %>
          <div class="form-group row">
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.select :amount, *[1..10], { include_blank: '個数選択'}, class: "form-select", required: true %>
            <%= f.submit "カートに入れる", class: "btn btn-success font-weight-bold mx-auto" %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>