<!--新規登録画面(public)-->
<div class="container">

  <div class="row">
    <div class="col-md-4 mt-5 mb-5">
      <h4 class="text-dark text-center title_bar">新規会員登録</h4>
    </div>
    <div class="col-md-1 mt-5"></div>
    <div class="col-md-5 mt-5"></div>
  </div>


  <div class="row justify-content-md-center">
    <div class="col-10">

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <label for="inputNmame", class="col-sm-3 col-form-label">名前</label>
          <div class="d-flex align-items-center">(性)　</div>
          <%= f.text_field :last_name, id:"inputName", placeholder: "令和", class:"col-sm-3 form-control" %>
          <div class="d-flex align-items-center">　　(名)</div>
          <%= f.text_field :first_name, id:"inputName", placeholder: "道子", class:"col-sm-3 form-control" %>
        </div>

        <div class="form-group row">
          <label for="inputNmamekana", class="col-sm-3 col-form-label">フリガナ</label>
          <div class="d-flex align-items-center">(セイ)</div>
          <%= f.text_field :last_name_kana, id:"inputNamekana", placeholder: "レイワ", class:"col-sm-3 form-control" %>
          <div class="d-flex align-items-center">　(メイ)</div>
          <%= f.text_field :first_name_kana, id:"inputNamekana", placeholder: "ミチコ", class:"col-sm-3 form-control" %>
        </div>

        <div class="form-group row">
          <label for="inputEmail", class="col-sm-3 col-form-label">メールアドレス</label>
          <%= f.text_field :email, id:"inputEmail", placeholder: "sample@example.com", class:"col-sm-3 form-control" %>
        </div>

        <div class="form-group row">
          <label for="inputPostalCode", class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, id:"inputPostalCode", placeholder: "0000000", class:"col-sm-3 form-control" %>
        </div>

        <div class="form-group row">
          <label for="inputAdress", class="col-sm-3 col-form-label">住所</label>
          <%= f.text_field :address, id:"inputAdress", placeholder: "東京都渋谷区代々木神園町0-0", class:"col-sm-7 form-control" %>
        </div>

        <div class="form-group row">
          <label for="inputTelephone", class="col-sm-3 col-form-label">電話番号(ハイフンなし)</label>
          <%= f.text_field :telephone_number, id:"inputTelephone", placeholder: "0000000000", class:"col-sm-3 form-control" %>
        </div>

        <div class="form-group row">
          <label for="inputPassward", class="col-sm-3 col-form-label">パスワード(6文字以上)</label>
          <%= f.password_field :password, id:"inputPassward", autocomplete: "new-password", class:"col-sm-3 form-control" %>
        </div>

        <div class="form-group row">
          <label for="inputPassward", class="col-sm-3 col-form-label">パスワード(確認用)</label>
          <%= f.password_field :password_confirmation, id:"inputPassward", autocomplete: "new-password", class:"col-sm-3 form-control" %>
        </div>

        <div class="form-group row">
          <label for="inputPassward", class="col-sm-3 col-form-label"></label>
          <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>

      <% end %>



    </div>
  </div>
  <div class="row">
    <div class="col-md-4 mt-5 mb-3">
      <h4 class="text-dark text-center title_bar">既に登録済みの方</h4>
    </div>
    <div class="col-md-1 mt-5"></div>
    <div class="col-md-5 mt-5"></div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-8">
    <p><%= link_to "こちら", new_customer_session_path %>　からログインしてください。</p>
    </div>
  </div>

</div>